{
  "name": "opencode-flow",
  "version": "0.1.0",
  "description": "Multi-agent orchestration framework built on OpenCode",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "opencode-flow": "dist/cli.js"
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "test": "vitest",
    "test:unit": "vitest run --dir tests/unit",
    "test:integration": "vitest run --dir tests/integration",
    "test:e2e": "vitest run --dir tests/e2e",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "opencode",
    "ai",
    "agents",
    "flow",
    "orchestration",
    "multi-agent",
    "llm",
    "cost-optimization",
    "model-routing"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@opencode-ai/sdk": "*",
    "commander": "^11.1.0",
    "chalk": "^5.3.0",
    "ora": "^7.0.1",
    "dotenv": "^16.3.1",
    "zod": "^3.22.4",
    "p-retry": "^6.1.0",
    "p-queue": "^8.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.2",
    "tsup": "^8.0.1",
    "vitest": "^1.0.4",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/opencode-flow.git"
  }
}
