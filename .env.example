# OpenCode Server Configuration
OPENCODE_SERVER_URL=http://localhost:4096

# LLM Provider API Keys
# Add only the providers you plan to use

# Anthropic Claude
ANTHROPIC_API_KEY=sk-ant-...

# OpenAI
OPENAI_API_KEY=sk-...

# Google Gemini
GOOGLE_API_KEY=...

# OpenRouter (access to 100+ models)
OPENROUTER_API_KEY=sk-or-v1-...

# Swarm Configuration
SWARM_MODE=development
SWARM_LOG_LEVEL=info

# Model Router
ROUTER_MODE=balanced
ROUTER_MAX_COST=0.5

# Memory Backend
SWARM_MEMORY_BACKEND=file
SWARM_MEMORY_PATH=./.swarm-memory
# SWARM_MEMORY_URL=redis://localhost:6379  # For Redis backend

# Agent Defaults
DEFAULT_TIMEOUT=300000
DEFAULT_TEMPERATURE=0.7
